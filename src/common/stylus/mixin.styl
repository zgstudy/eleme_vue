-pos(type, args)
  i = 0
  position: unquote(type)
  {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
  {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0

absolute()
  -pos('absolute', arguments)

fixed()
  -pos('fixed', arguments)

// 上下（top bottom）1像素边框
border-tb-onepx($color = rgba(1,17,27,0.1), $dir = 'bottom')
  position: relative
  &::after
    absolute($dir -1px)
    width: 100%
    height: 1px
    border-top: 1px solid $color
    content: ' '

// 左右（left right）1像素边框
border-lf-onepx($color = rgba(1,17,27,0.1), $dir = 'left')
  position: relative
  &::after
    absolute($dir -1px)
    width: 1px
    height: 100%
    border-left: 1px solid $color
    content: ' '
